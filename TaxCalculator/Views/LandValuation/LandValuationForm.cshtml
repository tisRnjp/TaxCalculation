@model TaxCalculator.Models.LandValuation
@{
    /**/

    ViewBag.Title = "जग्गा को मुल्यांकन";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>जग्गा को मुल्यांकन</h2>

@using (Html.BeginForm("Save", "LandValuation"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")

    <div class="form-group row">
        @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        </div>

    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.CostPerAnna, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.CostPerAnna, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.LandType, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.LandType, new { @class = "form-control" })
        </div>
    </div>
    
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary"> Save</button>

}




@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

}