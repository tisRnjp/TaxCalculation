@model TaxCalculator.Models.HouseLandTaxSlab
@{
    /**/

    /**/

    ViewBag.Title = "Tax Slab";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>घर को मुल्यांकन Tax Slab</h2>

@using (Html.BeginForm("Save", "HouseLandTaxSlab"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")

    <div class="form-group row">
        @Html.LabelFor(m => m.Sequence, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Sequence, new { @class = "form-control" })
        </div>

    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.LowerLimit, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.LowerLimit, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.UpperLimit, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.UpperLimit, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.TaxAmount, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.TaxAmount, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.TaxPercent, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.TaxPercent, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.FirstSlab, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.CheckBoxFor(m => m.FirstSlab, new { @class = "form-check-input" })
        </div>
    </div>




    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary"> Save</button>

}




@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

}